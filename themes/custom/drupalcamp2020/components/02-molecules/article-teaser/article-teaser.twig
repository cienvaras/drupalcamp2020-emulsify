{% set article_teaser__base_class = 'article-teaser' %}

<article {{ bem(article_teaser__base_class, article_teaser__variants) }}>
  <div {{ bem('image', [], article_teaser__base_class) }}>
    {% block article_teaser__image %}
      {% include '@atoms/images/image/responsive-image.twig' with {
        output_image_tag: true,
        image_src: article_teaser__image.src,
        image_alt: article_teaser__image.alt,
      } %}
    {% endblock %}
  </div>
  <div {{ bem('content', [], article_teaser__base_class) }}>
    {% include '@atoms/text/headings/_heading.twig' with {
      heading_level: 2,
      heading: article_teaser__title,
      heading_url: article_teaser__url,
    } %}
    <p {{ bem('date', [], article_teaser__base_class) }}>
      {{ article_teaser__date }}
    </p>
    {% if article_teaser__body %}
      <div {{ bem('body', [], article_teaser__base_class, 'text-long') }}>
        {{ article_teaser__body }}
      </div>
    {% endif %}
  </div>
</article>
